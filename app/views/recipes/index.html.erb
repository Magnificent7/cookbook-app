<h1>All Recipes:</h1>

<% @recipes.each_slice(3) do |three_recipes| %>

  <div class="row">

    <% three_recipes.each do |recipe| %>

      <div class="col-md-4">
        <div class="well">
          <h2>Title: <a href="/recipes/<%= recipe.id %>"><%= recipe.title %></a></h2>
          <h2>Chef: <%= recipe.user.first_name %></h2>
          <img src="<%= recipe.image %>">
          <h2>Ingredients: <%= recipe.ingredients %></h2>
          <h2>Directions: <%= recipe.directions %></h2>
          <h2>Prep Time: <%= recipe.prep_time %></h2>
        </div>
      </div>

    <% end %>

  </div>
<% end %>
