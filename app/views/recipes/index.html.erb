<h1>All Recipes:</h1>

<div class="row">
  <% @recipes.each do |recipe| %>
    <div class="col-md-4">
      <div class="well">
        <h2>Title: <a href="/recipes/<%= recipe.id %>"><%= recipe.title %></a></h2>
        <h2>Chef: <%= recipe.chef %></h2>
        <img src="<%= recipe.image %>">
        <h2>Ingredients: <%= recipe.ingredients %></h2>
        <h2>Directions: <%= recipe.directions %></h2>
      </div>
    </div>
  <% end %>
</div>